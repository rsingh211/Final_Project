<% content_for :title, @category.name %>

<div class="container">
  <h1><%= @category.name %> Beats</h1>

  <% if @beats.any? %>
    <% @beats.each do |beat| %>
      <div class="beat-card">
        <h3><%= link_to beat.title, beat_path(beat) %></h3>
        <p><strong>Genre:</strong> <%= beat.genre %></p>
        <p><strong>License:</strong> <%= beat.license_type %></p>
        <p><strong>Price:</strong> $<%= beat.price %></p>
      </div>
    <% end %>

    <%= paginate @beats %>
  <% else %>
    <p>No beats found in this category.</p>
  <% end %>
</div>
